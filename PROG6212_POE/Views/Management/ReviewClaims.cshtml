@model IEnumerable<PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Pending Claims";
}

<div class="card shadow-sm">
    <div class="card-header bg-white fw-semibold">
        <i class="bi bi-list-task me-2"></i>Pending Claims Review
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="p-5 text-center text-muted">
                <i class="bi bi-check2-circle" style="font-size: 2rem;"></i>
                <p class="mt-2">No claims pending review.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-sm align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Lecturer</th>
                            <th>Email</th>
                            <th>Date</th>
                            <th>Hours</th>
                            <th>Total (R)</th>
                            <th>Docs</th>
                            <th>Status</th>
                            <th style="width:300px;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr>
                                <td class="fw-bold">@c.Lecturer?.FullName</td>

                                <td>
                                    <a href="mailto:@c.Lecturer?.Email" class="text-decoration-none text-muted">
                                        @c.Lecturer?.Email
                                    </a>
                                </td>

                                <td>@c.DateWorked.ToString("yyyy-MM-dd")</td>
                                <td>@c.HoursWorked</td>
                                <td>@c.TotalAmount.ToString("N2")</td>

                                <td>
                                    @if (c.FileData != null && c.FileData.Length > 0)
                                    {
                                        <a asp-controller="Dashboard"
                                           asp-action="DownloadFile"
                                           asp-route-id="@c.ClaimId"
                                           class="btn btn-xs btn-outline-primary"
                                           title="Download Document">
                                            <i class="bi bi-download"></i> Download
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">None</span>
                                    }
                                </td>
                                <td>
                                    @if (c.Status == "UnderReview")
                                    {
                                        <span class="badge bg-info text-dark">Under Review</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Submitted</span>
                                    }
                                </td>

                                <td>
                                    @if (c.Status == "Submitted")
                                    {
                                        <form asp-action="StartReview" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@c.ClaimId" />
                                            <button class="btn btn-outline-primary btn-sm">Start Review</button>
                                        </form>
                                        <button class="btn btn-success btn-sm ms-1" disabled>Approve</button>
                                        <button class="btn btn-danger btn-sm ms-1" disabled>Reject</button>
                                    }
                                    else if (c.Status == "UnderReview")
                                    {
                                        <button class="btn btn-outline-secondary btn-sm" disabled>Reviewing...</button>
                                        <button class="btn btn-success btn-sm ms-1" data-bs-toggle="modal" data-bs-target="#approveModal" data-id="@c.ClaimId">Approve</button>
                                        <button class="btn btn-danger btn-sm ms-1" data-bs-toggle="modal" data-bs-target="#rejectModal" data-id="@c.ClaimId">Reject</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="approveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Approve" method="post">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Approve Claim</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="approveId" />
                    <label class="form-label">Manager Comment (Optional)</label>
                    <textarea name="comment" class="form-control" rows="3" placeholder="e.g. Checked against schedule, all good."></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Confirm Approval</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Reject" method="post">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Reject Claim</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="rejectId" />
                    <label class="form-label">Reason for Rejection</label>
                    <textarea name="comment" class="form-control" rows="3" placeholder="e.g. Hours exceed allocation..." required></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Confirm Rejection</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Script to pass the ID into the modal
        var approveModal = document.getElementById('approveModal');
        approveModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            document.getElementById('approveId').value = id;
        });

        var rejectModal = document.getElementById('rejectModal');
        rejectModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            document.getElementById('rejectId').value = id;
        });
    </script>
}