@model PROG6212_POE.Models.Claim
@{
    ViewData["Title"] = "Submit Claim";
}

<div class="card surface">
    <div class="card-header clean">Submit Claim</div>
    <div class="card-body">
        <div class="alert alert-light border mb-4">
            <i class="bi bi-info-circle me-2"></i>
            <strong>Automation Active:</strong> Your Hourly Rate (R @Model.HourlyRate.ToString("N2")) is automatically applied.
        </div>

        <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="HourlyRate" id="fixedRate" />

            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Date Worked</label>
                    <input asp-for="DateWorked" type="date" class="form-control" />
                    <span class="text-danger small" asp-validation-for="DateWorked"></span>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Hours Worked</label>
                    <input asp-for="HoursWorked" class="form-control" id="hours" placeholder="e.g. 5" />
                    <span class="text-danger small" asp-validation-for="HoursWorked"></span>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Activity</label>
                    <input asp-for="Activity" class="form-control" placeholder="Lecture / Marking" />
                    <span class="text-danger small" asp-validation-for="Activity"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Hourly Rate (Fixed)</label>
                    <input class="form-control bg-light" value="@Model.HourlyRate.ToString("N2")" readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Estimated Total (R)</label>
                    <input class="form-control fw-bold" id="totalDisplay" value="0.00" readonly />
                </div>

                <div class="col-12">
                    <label class="form-label">Supporting Document (Optional)</label>
                    <input name="document" type="file" class="form-control" />
                    <div class="form-text">Allowed: .pdf, .docx, .xlsx</div>
                </div>

                <div class="col-12">
                    <label class="form-label">Notes</label>
                    <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                </div>

                <div class="col-12 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Submit Claim</button>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Client-side Auto-Calculation
        const rate = parseFloat(document.getElementById('fixedRate').value.replace(',', '.')) || 0;
        const hoursInput = document.getElementById('hours');
        const totalDisplay = document.getElementById('totalDisplay');

        hoursInput.addEventListener('input', function() {
            const hours = parseFloat(this.value) || 0;
            const total = hours * rate;
            totalDisplay.value = total.toFixed(2);
        });
    </script>
}