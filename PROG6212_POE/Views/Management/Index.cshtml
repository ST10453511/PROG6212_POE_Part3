@{
    ViewData["Title"] = "Coordinator Dashboard";
    // Get the role safely for display
    var role = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Coordinator";
}

<div class="container py-5">
    <div class="mb-5">
        <h1 class="display-5 fw-bold">Welcome, @role - @User.Identity?.Name</h1>
        <p class="lead text-muted">Manage claims and approvals from this central dashboard.</p>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <h4 class="card-title mb-3">Review Claims</h4>
            <p class="card-text text-muted mb-4">View pending claims, check document proofs, and approve or reject submissions with comments.</p>

            <a asp-action="ReviewClaims" class="btn btn-dark btn-lg">
                Open Review
            </a>
        </div>
    </div>
</div>