@model IEnumerable<PROG6212_POE.Models.Claim>

@{
    ViewData["Title"] = "My Claims";
}

<div class="card shadow-sm">
    <div class="card-header bg-white d-flex align-items-center justify-content-between py-3">
        <h5 class="mb-0 text-primary"><i class="bi bi-list-check me-2"></i>My Claims History</h5>
        <a asp-action="SubmitClaim" class="btn btn-sm btn-primary">
            <i class="bi bi-plus-circle me-1"></i>New Claim
        </a>
    </div>
    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="text-center p-5">
                <i class="bi bi-inbox text-muted" style="font-size: 2rem;"></i>
                <p class="text-muted mt-2">No claims found. Submit your first claim!</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Date</th>
                            <th>Activity</th>
                            <th>Hours</th>
                            <th>Rate</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th style="min-width:150px;">Progress</th>
                            <th>Doc</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            string badgeClass = "bg-secondary";
                            int progress = 0;

                            if (c.Status == "Submitted") { badgeClass = "bg-warning text-dark"; progress = 33; }
                            else if (c.Status == "UnderReview") { badgeClass = "bg-info text-dark"; progress = 66; }
                            else if (c.Status == "Approved") { badgeClass = "bg-success"; progress = 100; }
                            else if (c.Status == "Rejected") { badgeClass = "bg-danger"; progress = 100; }

                            <tr>
                                <td>@c.DateWorked.ToString("MMM dd, yyyy")</td>
                                <td class="fw-bold text-dark">@c.Activity</td>
                                <td>@c.HoursWorked</td>
                                <td>R @c.HourlyRate.ToString("N2")</td>
                                <td class="fw-bold">R @c.TotalAmount.ToString("N2")</td>

                                <td><span class="badge @badgeClass rounded-pill">@c.Status</span></td>

                                <td>
                                    <div class="progress" style="height: 6px;">
                                        <div class="progress-bar @badgeClass" role="progressbar" style="width: @progress%"></div>
                                    </div>
                                </td>

                                <td>
                                    @if (!string.IsNullOrEmpty(c.DocumentPath))
                                    {
                                        <a href="@c.DocumentPath" target="_blank" class="btn btn-xs btn-outline-secondary" title="View Document">
                                            <i class="bi bi-file-earmark-text"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">-</span>
                                    }
                                </td>

                                <td>
                                    @if (!string.IsNullOrEmpty(c.DocumentPath))
                                    {
                                        <a href="@c.DocumentPath" target="_blank" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-download me-1"></i> Download
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">None</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>