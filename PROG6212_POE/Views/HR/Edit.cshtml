@model PROG6212_POE.Models.User
@{
    ViewData["Title"] = "Edit User";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit User Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="UserId" />

                        <div class="mb-3">
                            <label class="form-label">Role</label>
                            <select asp-for="Role" class="form-select">
                                <option value="Lecturer">Lecturer</option>
                                <option value="ProgrammeCoordinator">Programme Coordinator</option>
                                <option value="AcademicManager">Academic Manager</option>
                                <option value="HR">HR Admin</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                            <input asp-for="FullName" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input asp-for="Username" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold text-success">Hourly Rate (R)</label>
                            <input asp-for="HourlyRate" class="form-control" />
                            <div class="form-text">Required for Lecturers.</div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning w-100">Update User</button>
                            <a asp-action="Index" class="btn btn-outline-secondary w-100">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>